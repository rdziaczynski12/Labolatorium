
@{
    ViewData["Title"] = @Localizer["title"];
}
<link rel="stylesheet" href="~/css/position.css" />
<script type="text/javascript" src="~/js/galery.js" defer></script>

<header class="hederSections">
    <h2>@ViewData["Title"]</h2>
</header>
<hr />
<section class="containerPosition">
    <article class="galery">
        <div class="bigImage"><img src="~/images/Section/Automation/sa11.jpg" alt="Duze zdjecie"></div>

        <div class="miniImg">
            <div><a href="~/images/Section/Automation/sa11.jpg" title="Obraz 1"><img src="~/images/Section/Automation/sa11.jpg"></a></div>
            <div><a href="~/images/Section/Automation/sa12.jpg" title="Obraz 2"><img src="~/images/Section/Automation/sa12.jpg"></a></div>
            <div><a href="~/images/Section/Automation/sa13.jpg" title="Obraz 3"><img src="~/images/Section/Automation/sa13.jpg"></a></div>
        </div>
    </article>

    <div class="lineDescription"><hr /></div>

    <article class="description">
        @Localizer["description"]
    </article>

    <article class="download">
        <heder class="DownloadHeder">
            <h3>@Localizer["download"]</h3>
        </heder>
        <hr />
        <ul>
            <li><a href="~/doc/Automation/sa1.pdf"><img src="~/images/Section/iconPDF.png" />@Localizer["doc1"]</a></li>
            <li><a href="~/doc/Automation/norma_IEC61131.pdf"><img src="~/images/Section/iconPDF.png" />@Localizer["doc2"]</a></li>
            <li><a href="~/doc/Automation/instrukcja-TwinCAT.pdf"><img src="~/images/Section/iconPDF.png" />@Localizer["doc3"]</a></li>
            <li><a href="~/doc/Automation/instrukcja-uruchomienia-stanowiska.pdf"><img src="~/images/Section/iconPDF.png" />@Localizer["doc4"]</a></li>
        </ul>
    </article>

</section>
