@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    var returnUrl = string.IsNullOrEmpty(Context.Request.Path) ? "~/" : $"~{Context.Request.Path.Value}";
    D109.Controllers.LanguageController.changeLanguage();
    ViewData["Title"] = @Localizer["home"];
}

<link rel="stylesheet" href="~/css/home.css" />

<header class="hederSections"><h2>@Localizer["title"]</h2></header>

<hr />

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/Home/baner1.jpg" alt=@Localizer["banerTitle1"] class="img-responsive" />
            <h1 class="hederBaner carousel-caption">@Localizer["banerTitle1"]</h1>
            <div class="carousel-caption" role="option">
                <p class="footerBaner">
                    @Localizer["banerText1"]
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/Home/baner2.jpg" alt=@Localizer["banerTitle2"] class="img-responsive" />
            <h1 class="hederBaner carousel-caption">@Localizer["banerTitle2"]</h1>
            <div class="carousel-caption" role="option">
                <p class="footerBaner">
                    @Localizer["banerText2"]
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/Home/baner3.jpg" alt=@Localizer["banerTitle3"] class="img-responsive" />
            <h1 class="hederBaner carousel-caption">@Localizer["banerTitle3"]</h1>
            <div class="carousel-caption" role="option">
                <p class="footerBaner">
                    @Localizer["banerText3"]
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/Home/baner4.jpg" alt=@Localizer["banerTitle4"] class="img-responsive" />
            <h1 class="hederBaner carousel-caption">@Localizer["banerTitle4"]</h1>
            <div class="carousel-caption" role="option">
                <p class="footerBaner">
                    @Localizer["banerText4"]
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


<hr />
<section class="description">
    @Localizer["description"]


</section>
